@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor;

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<hr />
@if (@Model.Treats.Count == 0)
{
  <p>This Flavor is not found in any treats</p>
}
else
{
  <h3>Treats using this flavor:</h3>
  <ul>
  @foreach (var join in Model.Treats)
  {
    <p>@join.Treat.Name</p>
  }
  </ul>
}
<br>
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId }) | 
  @Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId }) |
  @Html.ActionLink("Add Treat", "AddTreat", new { id = Model.FlavorId })</p>